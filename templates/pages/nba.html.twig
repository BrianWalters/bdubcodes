{% extends 'base.html.twig' %}

{% block container %}
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>Type</th>
                        <th>Drafter</th>
                        <th>Wins</th>
                        <th>Losses</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    {% for selectedTeamRecord in selectedTeamRecords %}
                        <tr>
                            <td>{{ selectedTeamRecord.teamRecord.name }}</td>
                            <td>{{ selectedTeamRecord.skinsType }}</td>
                            <td>{{ selectedTeamRecord.drafter.name }}</td>
                            <td>{{ selectedTeamRecord.teamRecord.wins }}</td>
                            <td>{{ selectedTeamRecord.teamRecord.losses }}</td>
                            <td>{{ selectedTeamRecord.points }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}